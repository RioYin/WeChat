page{
  width: 100%;
  height: 100%;
}
.test-bg{
  width: 100%;
  height: 100%;
  background-color: #70c7da;
}
.bg-image{
  display: block;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,.2);
}

.test-logo{
  position: absolute;
  left:40rpx;
  top:40rpx;
}

.logo-image{
  width: 230rpx;
  height: 64rpx; 
}

.userinfo{
  position: absolute;
  right: 40rpx;
  top: 40rpx;
}

.userinfo-content{
  display: flex;
  align-items: center;
}

.userinfo-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: red;
  font-size: 28rpx;
  margin-left: 10rpx;
}

.activity-button{
  position: absolute;
  bottom: 80rpx;
